<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ff4c5279" />
            <gradient android:angle="-90" android:startColor="#ff513259" android:endColor="#ff615c9a"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ff634579" />
            <solid android:color="#ff834185"/>
        </shape>
    </item>  
    <item >
       <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#db413b79" />
            <gradient android:angle="-90" android:startColor="#d37776ba" android:endColor="#cf6c4985" />
       </shape>
    </item>
</selector>